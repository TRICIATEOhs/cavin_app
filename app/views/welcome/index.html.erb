<script>

$( document ).ready(function() {
   
  $('body').scrollspy({
    target: '#main-navbar',
    offset: 50
  });



  //to make navbar transparent at the top but opaque at the bottom
  function remove_navbar_transparent() {
      var window_top = $(window).scrollTop();
      var div_top = $('#about').offset().top;
      if (window_top > div_top) {
          $('#main-navbar').removeClass('transparent');
      } else {
          $('#main-navbar').addClass('transparent');
      }
  }

  $(function () {
      $(window).scroll(remove_navbar_transparent);
      remove_navbar_transparent();
  });


  $('#find-out-more-btn').hide();
  $('.all-services').hide();

  /* Every time the window is scrolled ... */
  $(window).scroll( function(){
  
      /* Check the location of each desired element */
      $('.hideme').each( function(i){
          
          var bottom_of_object = $(this).position().top;
          var bottom_of_window = $(window).scrollTop() + $(window).height();
          
          /* If the object is completely visible in the window, fade it in */
          if( bottom_of_window > bottom_of_object ){
            $(this).addClass('animated fadeIn');
              //$(this).animate({'opacity':'1'},800);

          }
          
      }); 

      $('.animate-btn').each( function(i){
          
          var bottom_of_object = $(this).position().top + $(this).outerHeight();
          var bottom_of_window = $(window).scrollTop() + $(window).height();
          
          /* If the object is completely visible in the window, fade it in */
          if( bottom_of_window > bottom_of_object ){
              $('#find-out-more-btn').addClass('animated tada');
              $('#find-out-more-btn').show();
          }
          
      }); 

      $('.animate-icons').each( function(i){
          
          var bottom_of_object = $(this).position().top + $(this).outerHeight();
          var bottom_of_window = $(window).scrollTop() + $(window).height();
          
          /* If the object is completely visible in the window, fade it in */
          if( bottom_of_window > bottom_of_object ){
              $('.all-services').addClass('animated slideInUp');
              $('.all-services').show();
          }
          
      }); 
  
  }); //window scroll function


  /*
    This is to check the state of the collapsed courses
  */

  $('#toggle-glyphicon').hide();

  $( "#find-out-more-btn" ).click(function() {
    if($("#toggle-glyphicon").is(":visible")) {
      $('#toggle-glyphicon').hide();
    } else {
      $('#toggle-glyphicon').show();
    }
  }); //find out more

  $("#toggle-glyphicon").click(function() {
      $('#find-out-more-btn').click();
      $('#toggle-glyphicon').hide();
  });




}); //end document ready


</script>



